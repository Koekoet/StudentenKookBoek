<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivCategoryImage"
        android:src="@drawable/cat_vleesgerechten"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCategoryCreate"
        android:text="CategoryName"
        android:layout_alignTop="@+id/ivCategoryImage"
        android:layout_toRightOf="@+id/ivCategoryImage"
        android:layout_toEndOf="@+id/ivCategoryImage"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
</RelativeLayout>